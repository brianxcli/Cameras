<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/local_view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>
    
    <FrameLayout
        android:id="@+id/remote_view_container"
        android:layout_width="@dimen/remote_view_width"
        android:layout_height="@dimen/remote_view_height"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/remote_view_margin"
        android:layout_marginEnd="@dimen/remote_view_margin">
    </FrameLayout>
</RelativeLayout>
