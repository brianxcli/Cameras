<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/local_preview_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextureView
            android:id="@+id/local_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/remote_view_container"
        android:layout_width="@dimen/remote_view_width"
        android:layout_height="@dimen/remote_view_height"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/remote_view_margin"
        android:layout_marginEnd="@dimen/remote_view_margin">
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/controller_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent">
        <Button
            android:id="@+id/btn_switch_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="@string/btn_switch_camera"/>
        <Button
            android:id="@+id/btn_pause_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/btn_switch_camera"
            android:text="@string/btn_pause_capture"/>
        <Button
            android:id="@+id/btn_resume_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/btn_pause_preview"
            android:text="@string/btn_resume_capture"/>
        <Button
            android:id="@+id/btn_rotate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/btn_resume_preview"
            android:text="@string/btn_rotate"/>
        <Button
            android:id="@+id/btn_scaling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/btn_rotate"
            android:text="@string/btn_scaling"/>
    </RelativeLayout>
</RelativeLayout>
